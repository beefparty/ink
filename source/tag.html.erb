---
pageable: true
per_page: 12
---
<div class="blog"><div class="content"><h1>Articles tagged '<%= tagname %>'</h1></div></div>

<div class="blog"><button class="shuf-button">What.</button></div>

<% if paginate && num_pages > 1 %><div class="blog"><div class="content">
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %></div></div>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <div class="blog <%= article.data['category'] %><% article.tags.each do |tag, articles| %> <%= (tag) %><% end %>">
    <% if article.data['category'] == "page" %><h1>
      <% if article.data['link'] %><a href="<%= article.data['link'] %>"><%= article.title %></a>
        <% else %>
          <%= link_to article.title, article %>
        <% end %>
      </h1>
    <% else %>
    <% if article.data['category'] == "audio" %><iframe width="100%" height="300" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= article.data['soundcloud'] %>&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe><% else %>
    <% if article.data['header_image'] %>  
      <%= image_tag article.data['header_image'], :width => '100%', :class => 'header_image' %>
    <% end %><% end %>
    <div class="content">
    <% if article.data['category'] != "quote" %><h2><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h2><% end %>
    <%= article.summary(250) %></div>
    <% end %>
  </div>
<% end %>

<div class="blog"><div class="content"><%= lorem.sentences 5 %></div></div>

<% if paginate %>
  <% if next_page %><div class="blog foot"><div class="content">
    <p><%= link_to 'Next page', next_page %></p></div></div>
  <% end %>
<% end %>